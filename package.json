{
  "name": "encrypting-app",
  "version": "1.0.0",
  "private": true,
  "description": "React + Express монолит на TypeScript",
  "workspaces": [
    "client",
    "server",
    "api"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter server dev\" \"pnpm --filter client dev\"",
    "dev:client": "pnpm --filter client dev",
    "dev:server": "pnpm --filter server dev",
    "build": "pnpm --filter server build && pnpm --filter client build",
    "build:client": "pnpm --filter client build",
    "build:server": "pnpm --filter server build",
    "start": "pnpm --filter server start",
    "type-check": "pnpm -r type-check",
    "clean": "rm -rf node_modules client/node_modules server/node_modules api/node_modules client/dist server/dist pnpm-lock.yaml"
  },
  "devDependencies": {
    "concurrently": "9.2.1",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}

